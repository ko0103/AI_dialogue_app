<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Myapp" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="csrf-token" content="<%= form_authenticity_token %>">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
    <%= display_meta_tags(default_meta_tags) %>

    <script async src="https://www.googletagmanager.com/gtag/js?id=G-DLX8NMJLYQ"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-DLX8NMJLYQ');
    </script>
  </head>

  <body>
    <div class="bg-[url('back_ground.png')] bg-cover bg-fixed h-full">
      <div class="flex flex-col min-h-screen">
        <header class="flex items-center justify-between h-24 bg-sky-950">
          <%= render "shared/header" %>
        </header>
        <% if flash[:notice] %>
          <p class="notice"><%= notice %></p>
        <% end %>
        <% if flash[:alert] %>
          <p class="alert"><%= alert %></p>
        <% end %>
        <main class="flex-grow">
          <%= yield %>
        </main>
      </div>
    </div>
  </body>
</html>
