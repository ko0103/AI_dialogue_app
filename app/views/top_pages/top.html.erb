  <div class="space-x-4 flex flex-row justify-center items-end h-screen">
    <div class="absolute bottom-36">
      <% if user_signed_in? %>
        <%= link_to "ホーム画面", homes_path, class: "bg-green-500 hover:bg-green-400 text-white rounded px-4 py-2" %>
