<div class="min-h-screen flex items-center justify-center">
  <div class="bg-white p-8 rounded-lg shadow-lg w-180">
    <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">ログイン</h2>

    <div class="mb-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-4">
          <%= f.label :email, class:"mb-2 block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, class:"w-full border border-gray-500", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field mb-4">
          <%= f.label :password , class:"mb-2 block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password, class:"w-full border border-gray-500", autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class:"inline-flex w-full items-center justify-center rounded-md bg-indigo-500 p-3 text-white duration-100 ease-in-out hover:bg-indigo-600 focus:outline-none cursor-pointer" %>
        </div>
      <% end %>
    </div>

    <%= render "devise/shared/links" %>
  </div>
</div>