<div class="min-h-screen flex items-center justify-center">
  <div class="bg-white p-8 rounded-lg shadow-lg w-96">
    <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">ユーザー新規登録</h2>

    <div class="mb-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-4">
          <%= f.label :name, class:"mb-2 block text-sm font-medium text-gray-700" %>
          <%= f.text_field :name, class:"w-full border border-gray-500" %>
        </div>
  
        <div class="field mb-4">
          <%= f.label :email, class:"mb-2 block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, class:"w-full border border-gray-500", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field mb-4">
          <%= f.label :password, class:"mb-2 block text-sm font-medium text-gray-700" %>
          <% if @minimum_password_length %>
          <em>(最低でも<%= @minimum_password_length %>字以上が必要)</em>
          <% end %><br />
          <%= f.password_field :password, class:"w-full border border-gray-500", autocomplete: "new-password" %>
        </div>

        <div class="field mb-4">
          <%= f.label :password_confirmation, class:"mb-2 block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password_confirmation, class:"w-full border border-gray-500", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class:"inline-flex w-full items-center justify-center rounded-md bg-indigo-500 p-3 text-white duration-100 ease-in-out hover:bg-indigo-600 focus:outline-none cursor-pointer" %>
        </div>
      <% end %>
    </div>
    
    <%= render "devise/shared/links" %>
  </div>
</div>
