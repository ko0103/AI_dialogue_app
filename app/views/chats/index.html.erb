<div class="container mx-auto p-4">
  <div class="text-center mb-4">
    <% if @current_theme %>
      <h2 id="chat-theme" class="text-2xl font-bold"><%= @current_theme %></h2>
    <% else %>
      <h2 id="chat-theme" class="text-2xl font-bold">テーマが設定されていません</h2>
    <% end %>
  </div>
  <div id="chat-log" class="space-y-2 mb-4">
    <% if @chat_logs %>
      <%= render partial: "chat_log", locals: { chat_logs: @chat_logs } %>
    <% end %>
  </div>
  <div id="chat-form">
    <% if @chat_session.present? && @chat_session.messages.count < 10 %>
      <%= render partial: "chats/chat_form" %>
    <% else %>
      <%= render partial: "chats/score_link", locals: { chat_session: @chat_session } %>
    <% end %>
  </div>
</div>
