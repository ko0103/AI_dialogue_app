<div class="container mx-auto p-4">
  <div class="text-center mb-4">
    <% if @current_theme %>
      <h2 id="chat-theme" class="text-2xl font-bold"><%= @current_theme %></h2>
    <% else %>
      <h2 id="chat-theme" class="text-2xl font-bold">テーマが設定されていません</h2>
    <% end %>
  </div>
  <div id="chat-log" class="space-y-2 mb-4">
    <% if @chat_logs %>
      <%= render partial: "chat_log", locals: { chat_logs: @chat_logs } %>
    <% end %>
  </div>

  <form method="post" class="flex space-x-2" data-turbo="true">
    <input type="text" name="message" id="message" class="border border-gray-300 rounded-md p-2 flex-grow">
    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white rounded-md p-2">送信</button>
  </form>
</div>
