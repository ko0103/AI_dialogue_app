<div class="container mx-auto p-4">
  <div id="chat-log" class="space-y-2 mb-4">
    <% if @chat_logs %>
      <%= render partial: "chat_log", locals: { chat_logs: @chat_logs } %>
    <% end %>
  </div>

  <form method="post" class="flex space-x-2" data-remote="true">
    <input type="text" name="message" id="message" class="border border-gray-300 rounded-md p-2 flex-1">
    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white rounded-md p-2">送信</button>
  </form>
</div>
<script src="<%= asset_path('chats.js') %>"></script>
